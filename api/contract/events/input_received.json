{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://m.app/schemas/events/input_received.json",
  "title": "input_received Event",
  "description": "Emitted when the user responds to an input request",
  "allOf": [
    { "$ref": "base.json" }
  ],
  "properties": {
    "type": {
      "const": "input_received"
    },
    "data": {
      "type": "object",
      "properties": {
        "text": {
          "type": "string",
          "description": "The user's response text"
        }
      },
      "required": ["text"]
    }
  }
}
