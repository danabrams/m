{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://m.app/schemas/events/base.json",
  "title": "Base Event",
  "description": "Common envelope for all M events",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "format": "uuid",
      "description": "Unique event identifier"
    },
    "run_id": {
      "type": "string",
      "format": "uuid",
      "description": "Run this event belongs to"
    },
    "seq": {
      "type": "integer",
      "minimum": 1,
      "description": "Monotonically increasing sequence number per run"
    },
    "type": {
      "type": "string",
      "description": "Event type identifier"
    },
    "data": {
      "type": "object",
      "description": "Event-specific payload"
    },
    "created_at": {
      "type": "integer",
      "description": "Unix timestamp when event was created"
    }
  },
  "required": ["id", "run_id", "seq", "type", "data", "created_at"]
}
