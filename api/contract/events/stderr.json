{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://m.app/schemas/events/stderr.json",
  "title": "stderr Event",
  "description": "Agent standard error stream",
  "allOf": [
    { "$ref": "base.json" }
  ],
  "properties": {
    "type": {
      "const": "stderr"
    },
    "data": {
      "type": "object",
      "properties": {
        "text": {
          "type": "string",
          "description": "Error text content"
        }
      },
      "required": ["text"]
    }
  }
}
